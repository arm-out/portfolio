---
import Head from "../components/Head.astro";
import "../styles/global.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<Head title={title} />
	</head>
	<body class='dark'>
		<slot />

		<style>
			body {
				--ff-weight: 400;

				--bg-color: rgb(255, 255, 255);

				--ff-color-1: rgb(0, 0, 0);

				min-height: 100vh;
				margin-block: 1rem;

				display: flex;
				flex-direction: column;
				align-items: center;

				animation: fadeIn 0.5s;
			}

			body.dark {
				--bg-color: rgb(23, 23, 23);

				--ff-color-1: rgb(229, 229, 229);
				--ff-color-2: hsla(0, 0%, 100%, 0.8);
				--ff-color-3: hsla(0, 0%, 100%, 0.6);
				--ff-color-4: hsla(0, 0%, 100%, 0.4);
				--ff-color-hover: hsla(0, 0%, 100%, 1);

				background-color: var(--bg-color);

				animation: fadeIn 0.5s linear, enter 0.5s ease-in-out;
			}

			@media (min-width: 640px) {
				body {
					margin-top: 6rem;
				}
			}

			@keyframes fadeIn {
				from {
					opacity: 0;
				}

				to {
					opacity: 1;
				}
			}

			@keyframes enter {
				from {
					transform: translateY(-20px);
				}

				to {
					transform: translateY(0);
				}
			}
		</style>
	</body>
</html>
