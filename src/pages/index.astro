	<style>
		header {
			padding: 1rem 2rem 0 1rem;
			margin-bottom: 4rem;
			width: 100%;
			max-width: 42rem;
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		#header-container {
			display: flex;
			gap: 1rem;
		}

		header nav {
			display: flex;
			height: 100%;
			align-items: center;
		}

		header a {
			display: inline-block;
			color: var(--ff-color-2);
		}

		main {
			display: flex;
			flex-direction: column;
			gap: 4rem;
			padding: 0 1rem 1rem 1rem;
			max-width: 42rem;
		}

		h1 {
			font-size: 1rem;
			font-weight: var(--ff-weight);
			color: var(--ff-color-1);
		}

		h2 {
			font-size: 1rem;
			font-weight: var(--ff-weight);
			color: var(--ff-color-3);
		}

		h3 {
			font-size: 1rem;
			font-weight: var(--ff-weight);
			color: var(--ff-color-4);
		}

		p {
			font-size: 1rem;
			font-weight: var(--ff-weight);
			color: var(--ff-color-4);
		}

		nav {
			display: flex;
			flex-direction: column;
			gap: 1rem;
		}

		ul {
			list-style-type: none;
			display: grid;
			grid-template-columns: repeat(1, 1fr);
			gap: 1rem;
		}

		li {
			display: block;
		}

		a {
			text-decoration: none;
		}

		nav a {
			color: var(--ff-color-2);
		}

		a:hover {
			color: var(--ff-color-hover);
		}

		#email {
			color: var(--ff-color-2);
		}

		#email:hover {
			color: var(--ff-color-hover);
		}

		svg {
			height: 0.75rem;
			width: 0.75rem;
			display: inline-block;
			vertical-align: middle;
		}

		section {
			display: flex;
			flex-direction: column;
			gap: 1rem;
		}

		section p {
			color: var(--ff-color-2);
		}

		#about a {
			text-decoration: underline;
			color: color: var(--ff-color-2);
		}

		a:hover {
			cursor: pointer;
		}

		footer {
			padding-inline: 1rem;
			margin-top: 2rem;
			width: 100%;
			max-width: 42rem;
		}

		footer p {
			font-size: 0.875rem;
		}

		footer a {
			color: var(--ff-color-4);
		}


		footer a:hover {
			color: var(--ff-color-3);
		}

		@media (min-width: 450px) {
			ul {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@media (min-width: 648px) {
			ul {
				grid-template-columns: repeat(3, 1fr);
			}
		}
	</style>
</Layout>
